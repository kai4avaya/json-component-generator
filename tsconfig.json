{
  "extends": "./local-packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "local-packages/**/tsup.config.ts",
    "local-packages/**/src/**",
    "local-packages/**/*.test.ts",
    "local-packages/**/*.test.tsx"
  ]
}
